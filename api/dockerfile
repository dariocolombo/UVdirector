# Usar la imagen base de Go
FROM golang:1.20-alpine

# Establecer el directorio de trabajo
WORKDIR /app

# Copiar los archivos necesarios
COPY go.mod go.sum ./
RUN go mod download

COPY . .

# Compilar el binario
RUN go build -o main .

# Exponer el puerto 8080
EXPOSE 8080

# Comando para ejecutar la aplicaci√≥n
CMD ["./main"]
